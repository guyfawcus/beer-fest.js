{
  "name": "beer-fest",
  "version": "1.0.0",
  "description": "Web app to display ale availability at the ACBF",
  "main": "server.js",
  "scripts": {
    "eslint": "eslint --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore --write '**/*.js' '**/*.css' '**/*.md'",
    "pretest": "npm run prettier && npm run eslint",
    "test": "",
    "docs": "jsdoc -c jsdoc.json",
    "type-check": "tsc"
  },
  "author": "guyfawcus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/guyfawcus/beer-fest.js.git"
  },
  "engines": {
    "node": "^12.x"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^4.0.4",
    "csvtojson": "^2.0.10",
    "ejs": "^3.1.3",
    "express": "^4.17.1",
    "express-enforces-ssl": "^1.1.0",
    "express-flash": "0.0.2",
    "express-session": "^1.17.1",
    "express-socket.io-session": "^1.3.5",
    "helmet": "^3.22.0",
    "redis": "^3.0.2",
    "reveal.js": "^4.0.2",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.0",
    "@types/connect-redis": "0.0.14",
    "@types/csvtojson": "^1.1.5",
    "@types/ejs": "^3.0.4",
    "@types/express": "^4.17.6",
    "@types/express-enforces-ssl": "^1.1.1",
    "@types/express-flash": "0.0.2",
    "@types/express-session": "^1.17.0",
    "@types/express-socket.io-session": "^1.3.2",
    "@types/helmet": "0.0.47",
    "@types/node": "^14.0.12",
    "@types/redis": "^2.8.22",
    "@types/socket.io": "^2.1.8",
    "eslint": "^7.2.0",
    "eslint-plugin-import": "^2.21.1",
    "husky": "^4.2.5",
    "jsdoc": "^3.6.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "standard": "^14.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test",
      "pre-push": "npm run test"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": "standard",
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "camelcase": "off",
      "space-before-function-paren": "off",
      "import/no-unused-modules": [
        1,
        {
          "unusedExports": true
        }
      ]
    }
  }
}

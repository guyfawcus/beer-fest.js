{
  "name": "beer-fest",
  "version": "1.1.0",
  "description": "Web app to display ale availability at the ACBF",
  "main": "server.js",
  "scripts": {
    "eslint": "eslint --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore --write '**/*.js' '**/*.css' '**/*.md'",
    "pretest": "npm run prettier && npm run eslint",
    "test": "",
    "load-test": "artillery run utils/websocket-load-test.yaml",
    "docs": "jsdoc -c jsdoc.json",
    "type-check": "tsc",
    "update": "ncu -u --target minor"
  },
  "author": "guyfawcus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/guyfawcus/beer-fest.js.git"
  },
  "engines": {
    "node": "^16.x"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^5.2.0",
    "cors": "^2.8.5",
    "csv-parse": "^4.16.3",
    "csv-stringify": "^5.6.5",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "express-enforces-ssl": "^1.1.0",
    "express-flash": "0.0.2",
    "express-session": "^1.17.3",
    "express-socket.io-session": "^1.3.5",
    "feature-policy": "^0.6.0",
    "geojson": "^0.5.0",
    "helmet": "^4.6.0",
    "leaflet": "^1.8.0",
    "node-fetch": "^2.6.7",
    "redis": "^3.1.2",
    "reveal.js": "^4.3.1",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "wikibase-sdk": "^7.15.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/connect-redis": "0.0.18",
    "@types/csvtojson": "^1.1.5",
    "@types/ejs": "^3.1.1",
    "@types/express": "^4.17.13",
    "@types/express-enforces-ssl": "^1.1.1",
    "@types/express-flash": "0.0.2",
    "@types/express-session": "^1.17.5",
    "@types/express-socket.io-session": "^1.3.6",
    "@types/node": "^15.14.9",
    "@types/redis": "^2.8.32",
    "artillery": "^1.7.9",
    "artillery-engine-socketio-v3": "^1.1.2",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^6.0.0",
    "jsdoc": "^3.6.11",
    "nodemon": "^2.0.19",
    "npm-check-updates": "^11.8.5",
    "prettier": "^2.7.1",
    "standard": "^16.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test",
      "pre-push": "npm run test"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": "standard",
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "camelcase": "off",
      "prefer-promise-reject-errors": "off",
      "space-before-function-paren": "off",
      "import/no-unused-modules": [
        1,
        {
          "unusedExports": true
        }
      ]
    }
  }
}

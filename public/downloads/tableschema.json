{
  "fields": [
    {
      "name": "beer_number",
      "title": "Beer number",
      "description": "The number of the beer",
      "type": "string",
      "constraints": {
        "required": true,
        "unique": true
      }
    },
    {
      "name": "beer_name",
      "title": "Beer name",
      "description": "The name of the beer",
      "type": "string"
    },
    {
      "name": "brewer",
      "title": "Brewer",
      "description": "The brewer of the beer",
      "type": "string"
    },
    {
      "name": "brewery_wikidata_id",
      "title": "Brewery Wikidata ID",
      "description": "The Wikidata QID of the brewery",
      "type": "string",
      "constraints": {
        "pattern": "Q[1-9]\\d*"
      }
    },
    {

<!DOCTYPE html>

<html>
  <head>
    <meta charset="utf-8" />
    <title>ACBF Login</title>
    <link href="style.css" type="text/css" rel="stylesheet" />
    <link rel="icon" type="image/png" sizes="32x32" href="favicon-32x32.png" />
    <script defer src="/socket.io/socket.io.js"></script>
    <script type="module" src="core.js"></script>
  </head>

  <body>
    <div class="warning_icon" title="Server disconnected!">X</div>
    <div class="settings_container">
      <div class="settings_header"><h1 id="title">ACBF Login</h1></div>
      <div class="settings_utils">
        <div>
          <% if (messages.error) { %> <%= messages.error %> <% } %>
          <form action="/users" method="post">
            <div class="login_fields">
              <div>
                <label for="name" style="font-weight: bold;">Name:</label>
                <input type="text" id="name" name="name" placeholder="Your name (whatever you want)" pattern=".{1,12}" required title="12 characters maximum" required />
              </div>
              <div>
                <label for="code" style="font-weight: bold;">Code:</label>
                <input type="password" id="code" name="code" placeholder="Given to you by Chesney" required />
              </div>
              <div class="submit_button">
                <button type="submit">Login</button>
                <a href="/"><button type="button">Home</button></a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>

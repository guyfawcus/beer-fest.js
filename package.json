{
  "name": "beer-fest",
  "version": "1.1.0",
  "description": "Web app to display ale availability at the ACBF",
  "exports": "./server.js",
  "type": "module",
  "scripts": {
    "eslint": "eslint --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore --write '**/*.js' '**/*.css' '**/*.md'",
    "pretest": "npm run prettier && npm run eslint",
    "test": "",
    "load-test": "artillery run utils/websocket-load-test.yaml",
    "docs": "jsdoc -c jsdoc.json",
    "type-check": "tsc",
    "update": "ncu -u --target minor"
  },
  "author": "guyfawcus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/guyfawcus/beer-fest.js.git"
  },
  "engines": {
    "node": "^20.x"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^5.2.0",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.6",
    "csv-stringify": "^6.5.0",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-enforces-ssl": "^1.1.0",
    "express-flash": "0.0.2",
    "express-session": "^1.18.0",
    "express-socket.io-session": "^1.3.5",
    "feature-policy": "^0.6.0",
    "geojson": "^0.5.0",
    "helmet": "^4.6.0",
    "leaflet": "^1.9.4",
    "node-fetch": "^2.6.12",
    "redis": "^3.1.2",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "wikibase-sdk": "^10.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/connect-redis": "0.0.23",
    "@types/csvtojson": "^1.1.5",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/express-enforces-ssl": "^1.1.4",
    "@types/express-flash": "0.0.5",
    "@types/express-session": "^1.18.0",
    "@types/express-socket.io-session": "^1.3.9",
    "@types/node": "^20.12.12",
    "@types/redis": "^4.0.10",
    "artillery": "^2.0.12",
    "eslint": "^8.45.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jsdoc": "^4.0.3",
    "nodemon": "^3.1.0",
    "npm-check-updates": "^16.10.17",
    "prettier": "^2.8.8",
    "standard": "^17.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test",
      "pre-push": "npm run test"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": "standard",
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "camelcase": "off",
      "prefer-promise-reject-errors": "off",
      "space-before-function-paren": "off",
      "import/no-unused-modules": [
        1,
        {
          "unusedExports": true
        }
      ]
    }
  }
}

{
  "name": "beer-fest",
  "version": "1.1.0",
  "description": "Web app to display ale availability at the ACBF",
  "main": "server.js",
  "scripts": {
    "eslint": "eslint --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore --write '**/*.js' '**/*.css' '**/*.md'",
    "pretest": "npm run prettier && npm run eslint",
    "test": "",
    "load-test": "artillery run utils/websocket-load-test.yaml",
    "docs": "jsdoc -c jsdoc.json",
    "type-check": "tsc",
    "update": "ncu -u"
  },
  "author": "guyfawcus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/guyfawcus/beer-fest.js.git"
  },
  "engines": {
    "node": "^14.x"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^5.0.0",
    "cors": "^2.8.5",
    "csv-parse": "^4.12.0",
    "csv-stringify": "^5.5.1",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "express-enforces-ssl": "^1.1.0",
    "express-flash": "0.0.2",
    "express-session": "^1.17.1",
    "express-socket.io-session": "^1.3.5",
    "feature-policy": "^0.5.0",
    "geojson": "^0.5.0",
    "helmet": "^4.1.1",
    "leaflet": "^1.7.1",
    "node-fetch": "^2.6.1",
    "redis": "^3.0.2",
    "reveal.js": "^4.1.0",
    "socket.io": "^2.3.0",
    "wikibase-sdk": "^7.8.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.0",
    "@types/connect-redis": "0.0.14",
    "@types/csvtojson": "^1.1.5",
    "@types/ejs": "^3.0.5",
    "@types/express": "^4.17.8",
    "@types/express-enforces-ssl": "^1.1.1",
    "@types/express-flash": "0.0.2",
    "@types/express-session": "^1.17.0",
    "@types/express-socket.io-session": "^1.3.2",
    "@types/node": "^14.14.5",
    "@types/redis": "^2.8.28",
    "@types/socket.io": "^2.1.11",
    "artillery": "^1.6.1",
    "eslint": "^7.12.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "jsdoc": "^3.6.6",
    "nodemon": "^2.0.6",
    "npm-check-updates": "^9.2.3",
    "prettier": "^2.1.2",
    "standard": "^15.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test",
      "pre-push": "npm run test"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": "standard",
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "camelcase": "off",
      "prefer-promise-reject-errors": "off",
      "space-before-function-paren": "off",
      "import/no-unused-modules": [
        1,
        {
          "unusedExports": true
        }
      ]
    }
  }
}
